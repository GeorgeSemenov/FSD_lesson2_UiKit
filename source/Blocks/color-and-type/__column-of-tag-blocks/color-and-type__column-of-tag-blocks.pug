include ../../tag-block/tag-block.pug
mixin color-and-type__column-of-tag-blocks(modifier)
  .color-and-type__column-of-tag-blocks&attributes(attributes)
    - var bre='<br />'
    +tag-block()
    +tag-block(
        ' tag-block_font-style_h2 ',
        'H2',
        'Next one is the item title inside widgets')
    +tag-block(
        ' tag-block_font-style_h3 ',
        'H3',
        'THIS IS A LABEL OR CTA TEXT')
    +tag-block(
        ' tag-block_font-style_body ',
        'span',
        'This is the body text which is used for most <br /> of the design, like paragraphs, lists, etc',
        '',
        'Body')