mixin text-field__input-wrapper(inputType, isNeededArrow=true, modifier)
  .text-field__input-wrapper&attributes(attributes)
    - var additionalClass = "";
    if (isNeededArrow || inputType=="date")
      +text-field__toggler()
      - additionalClass = " datepicker-here"
    +text-field__input(modifier)(class=additionalClass)