mixin form-and-elements__pagination-slide-button-column(modifier)
  .form-and-elements__pagination-slide-button-column&attributes(attributes)
    +range-slider(modifier)
    +button-list({
      header: "BUTTONS",
      elementsArr:[
        {additionalClasses: "button_colored_purple button_size_normal"},
        {additionalClasses: "button_transparent_with-border button_size_normal"},
        {additionalClasses: "button_transparent"},
        {additionalClasses: "button_colored_purple button_size_huge"}
      ]
    })
