mixin form-and-elements__text-fields-column(modifier)
  .form-and-elements__text-fields-column&attributes(attributes)
    +text-field({
      title: "TEXT FIELD", 
      description: "DEFAULT",
      inputPlaceholder: "Email"
      } 
      )(class=' form-and-elements__text-field text-field_size_normal ')
    +text-field({
      title: "TEXT FIELD", 
      description: "HOVER / FOCUS",
      inputPlaceholder: "This is pretty awesome"
      } 
      )(class=' form-and-elements__text-field text-field_size_normal ')
    +dropdown-with-math-field("DROPDOWN",
      "DEFAULT",
      "Сколько гостей",
      [
        {text:"СПАЛЬНИ", count:2},
        {text:"КРОВАТИ", count:2},
        {text:"ВАННЫЕ КОМАНТЫ", count:0},
      ],
      false,
      false,
      false
      )(class="form-and-elements__dropdown-with-math-field dropdown-with-math-field_size_normal dropdown-with-math-field_numbers-only")
    +text-field({
      title: "MASKED TEXT FIELD", 
      description: "DEFAULT",
      inputPlaceholder: "ДД.ММ.ГГГГ",
      inputType: "date"
      } 
      )(class=' form-and-elements__text-field text-field_size_normal text-field_theme_date')
    +form-and-elements__text-fields-column-sub-row()